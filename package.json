{
  "name": "sadaqahbox",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bunx vite",
    "dev:static": "bunx vite --config vite.static.config.ts",
    "preview": "bun run build && bunx wrangler dev",
    "generate:favicons": "node scripts/generate-favicons.js",
    "generate:llms": "bun scripts/generate-llms.ts",
    "build": "bun run generate:llms && bunx vite build",
    "build:static": "bun run generate:llms && bunx vite build --config vite.static.config.ts && cp dist/static/index.html dist/static/404.html",
    "deploy:static": "echo 'Deploy dist/static to your static host (e.g., GitHub Pages)'",
    "db:generate": "bunx drizzle-kit generate",
    "migrate:local": "bunx wrangler d1 migrations apply sadaqahbox --local",
    "migrate:remote": "bunx wrangler d1 migrations apply sadaqahbox --remote",
    "auth:generate": "bunx @better-auth/cli generate --config src/auth/index.ts --output src/db/auth.schema.ts -y",
    "auth:format": "bunx prettier --write src/db/auth.schema.ts",
    "auth:update": "npm run auth:generate && npm run auth:format",
    "studio:dev": "drizzle-kit studio",
    "studio:prd": "cross-env NODE_ENV=production drizzle-kit studio",
    "test": "bun test",
    "test:coverage": "bun test --coverage"
  },
  "dependencies": {
    "@base-ui/react": "^1.2.0",
    "@better-auth/passkey": "^1.4.18",
    "@daveyplate/better-auth-ui": "^3.3.15",
    "@fontsource-variable/geist": "^5.2.8",
    "@hono/zod-openapi": "^1.2.2",
    "@hugeicons/core-free-icons": "^3.1.1",
    "@hugeicons/react": "^1.1.5",
    "@scalar/api-reference-react": "^0.8.62",
    "@scalar/hono-api-reference": "^0.9.44",
    "@scalar/openapi-to-markdown": "^0.3.49",
    "@tailwindcss/postcss": "^4.2.0",
    "@tailwindcss/vite": "^4.2.0",
    "@tanstack/react-query": "^5.90.21",
    "@tanstack/react-virtual": "^3.13.18",
    "better-auth": "^1.4.18",
    "better-auth-cloudflare": "^0.2.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.12.1",
    "jspdf": "^4.2.0",
    "lucide-react": "^0.575.0",
    "motion": "^12.34.3",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.4.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0",
    "shadcn": "^3.8.5",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.5.0",
    "tailwindcss": "^4.2.0",
    "tw-animate-css": "^1.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.4.18",
    "@cloudflare/vite-plugin": "^1.25.2",
    "@cloudflare/workers-types": "^4.20260228.0",
    "@types/bun": "^1.3.9",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/service-worker-mock": "^2.0.4",
    "@vitejs/plugin-react": "^5.1.4",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.9",
    "favicons": "^7.2.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "wrangler": "^4.67.0"
  }
}
